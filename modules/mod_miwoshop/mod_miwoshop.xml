	<version>1.0.0</version>
	<description>MiwoShop All-in-One Module</description>
	
	<files>
		<filename module="mod_miwoshop">index.html</filename>
		<filename module="mod_miwoshop">mod_miwoshop.php</filename>
	</files>

	<config>
		<fields name="params" addfieldpath="/miwoshop/miwoshop/elements">
			<fieldset name="basic">
				<field name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="Module Suffix" />
                <field name="module" type="miwoshopmodule" default="miwoshopcart" label="Module" description="Module" />
                <field name="layout_id" type="miwoshoplayout" default="12" label="Layout" description="Layout" />
			</fieldset>
		</fields>
	</config>
